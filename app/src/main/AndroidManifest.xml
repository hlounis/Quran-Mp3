<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="malek.com.quranmp3">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="malek.com.quranmp3.SplachScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="malek.com.quranmp3.QuraActivity"
            android:label="القراء ">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name="malek.com.quranmp3.ListViewActivity" />
        <activity
            android:name="malek.com.quranmp3.RecitationActivity"
            android:label="المصحف " />
        <activity
            android:name="malek.com.quranmp3.SwarActivity"
            android:label="السور"></activity>
    </application>

</manifest>
